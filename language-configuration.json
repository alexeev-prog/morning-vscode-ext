{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "/*", "close": "*/"}
    ],
    "surroundingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "/*", "close": "*/"}
    ],
    "indentationRules": {
        "increaseIndentPattern": "^(.*\\[\\w+\\s|\\[if\\s|\\[loop\\s|\\[func\\s|\\[class\\s|\\[for\\s|\\[while\\s|\\[scope\\s).*$",
        "decreaseIndentPattern": "^\\s*\\]"
    },
    "folding": {
        "markers": {
        "start": "^\\[",
        "end": "\\]$"
        }
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*!?",
    "onEnterRules": [
        {
        "beforeText": "^\\s*\\[func\\s+.*$",
        "action": {
            "indent": "indent",
            "appendText": "    "
        }
        },
        {
        "beforeText": "^\\s*\\[if\\s+.*$",
        "afterText": "^\\s*\\]$",
        "action": {
            "indent": "indent",
            "appendText": "    "
        }
        },
        {
        "beforeText": "^\\s*\\[class\\s+.*$",
        "action": {
            "indent": "indent",
            "appendText": "    "
        }
        }
    ],
    "autoFormat": true,
}
