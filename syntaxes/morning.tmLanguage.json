{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Morning",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#core_operators"},
		{"include": "#comparison_operators"},
		{"include": "#types"},
		{"include": "#literals"},
		{"include": "#strings"},
		{"include": "#comments"},
		{"include": "#functions"},
		{"include": "#brackets"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.morning",
				"match": "\\b(if|elif|else|while|for|break|continue|loop|check|return|var|const|set|scope|fprint|finput)\\b"
			}]
		},
		"core_operators": {
			"patterns": [{
				"name": "keyword.operator.arithmetic.morning",
				"match": "[\\+\\-\\*/]"
			}]
		},
		"comparison_operators": {
			"patterns": [{
				"name": "keyword.operator.comparison.morning",
				"match": ">|==|<|!=|>=|<="
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.morning",
				"match": "!\\b(int|int64|int32|int16|int8|str|frac|bool|none)\\b"
			}]
		},
		"literals": {
			"patterns": [
				{
					"name": "constant.language.boolean.morning",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.morning",
					"match": "[-+]?(\\d+(\\.\\d*)?|\\.\\d+)([eE][-+]?\\d+)?|0x[\\da-fA-F]+|0b[01]+|0[0-7]+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.morning",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.morning",
					"match": "\\\\[nrt\"\\\\]"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.morning",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.block.morning",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"functions": {
			"patterns": [{
				"name": "entity.name.function.morning",
				"match": "\\b(func)\\b"
			}]
		},
		"brackets": {
			"patterns": [
				{
					"name": "meta.brace.round.morning",
					"match": "[()]"
				},
				{
					"name": "meta.brace.square.morning",
					"match": "[\\[\\]]"
				},
				{
					"name": "meta.brace.curly.morning",
					"match": "[{}]"
				}
			]
		}
	},
	"scopeName": "source.morning"
}
