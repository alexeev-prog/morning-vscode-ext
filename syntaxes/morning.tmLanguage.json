{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Morning",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#builtins"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#flow-control"
        },
        {
            "include": "#booleans"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#function-calls"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.morning",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.morning",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.morning",
                    "match": "\\b(func|var|const|set|scope|check|if|while|for|loop|importlib|space|usespace)\\b"
                }
            ]
        },
        "builtins": {
            "patterns": [
                {
                    "name": "support.function.builtin.morning",
                    "match": "\\b(fprint|finput)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.morning",
                    "match": "!\\b(int|int64|int32|int16|int8|bool|string|void|frac|none|nil)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.morning",
                    "match": "[+\\-*/%=><&|!]|==|!=|<=|>="
                }
            ]
        },
        "flow-control": {
            "patterns": [
                {
                    "name": "keyword.control.flow.morning",
                    "match": "\\b(break|continue)\\b"
                }
            ]
        },
        "booleans": {
            "patterns": [
                {
                    "name": "constant.language.boolean.morning",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.morning",
                    "match": "\\b(0x[0-9a-fA-F]+|0b[01]+|0[0-7]+|\\d+\\.?\\d*)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.morning",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.morning",
                    "match": "\\\\."
                },
                {
                    "name": "constant.character.format.morning",
                    "match": "%[a-zA-Z]"
                }
            ]
        },
        "function-calls": {
            "patterns": [
                {
                    "name": "entity.name.function.morning",
                    "match": "(?<=\\()[\\w\\-+]+"
                }
            ]
        }
    },
    "scopeName": "source.morning"
}
